<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FoodScrapActivity">



    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/catRecycle"
        android:background="#e6e6e6"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/catRecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        >

        <ImageButton
            android:id="@+id/btn_coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coffeeg"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>


        <ImageButton
            android:id="@+id/btn_foodscrapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/foodscrapb"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>

        <ImageButton
            android:id="@+id/btn_cookingoil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cookingoilb"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>


        <ImageButton
            android:id="@+id/btn_foodother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/foodother"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>





    </LinearLayout>

</RelativeLayout>
