<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CatPaperActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/linearLayout">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aluminum cans"
            android:textSize="20dp"
            android:id="@+id/cans"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/canprice"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:hint="0.00"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THB./kg."
            android:textSize="20dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:id="@+id/linearLayout2">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copper"
            android:textSize="20dp"
            android:id="@+id/copper"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copperprice"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:hint="0.00"
            android:layout_marginLeft="105dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THB./kg."
            android:textSize="20dp"
            android:layout_marginTop="15dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:id="@+id/linearLayout3">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lead"
            android:textSize="20dp"
            android:id="@+id/lead"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leadprice"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:hint="0.00"
            android:layout_marginLeft="125dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THB./kg."
            android:textSize="20dp"
            android:layout_marginTop="15dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:id="@+id/linearLayout4">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zinc"
            android:textSize="20dp"
            android:id="@+id/zinc"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zincprice"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:hint="0.00"
            android:layout_marginLeft="130dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THB./kg."
            android:textSize="20dp"
            android:layout_marginTop="15dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iron"
            android:textSize="20dp"
            android:id="@+id/iron"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ironprice"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:hint="0.00"
            android:layout_marginLeft="135dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THB./kg."
            android:textSize="20dp"
            android:layout_marginTop="15dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignLeft="@+id/linearLayout5"
        android:layout_alignStart="@+id/linearLayout5">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="20dp"
            android:id="@+id/other_plasstic"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other_plassticspec"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:inputType="text"
            android:hint="Please specify"
            android:layout_marginLeft="0dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other_plassticprice"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:hint="0.00"
            android:layout_marginLeft="-10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THB./kg."
            android:textSize="20dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>
</RelativeLayout>