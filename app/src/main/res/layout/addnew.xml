<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".PlusActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause_light" />

            <Button
                android:id="@+id/btn_add_menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="Recycled Waste" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause_light" />

            <Button
                android:id="@+id/btn_add_menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="Food Scrape" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause_light" />

            <Button
                android:id="@+id/btn_add_menu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="Landfill" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause_light" />

            <Button
                android:id="@+id/btn_add_menu4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="Freecycle Stuffs"
                android:padding="4dp"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>
