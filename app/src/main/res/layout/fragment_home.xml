<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="top"
        android:weightSum="1"
        android:background="#ffffff"
        android:id="@+id/linearLayout7">

        <ImageButton
            android:id="@+id/btn_recycle"
            android:layout_weight="0.25"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@mipmap/recyclebtn"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"/>

        <ImageButton
            android:id="@+id/btn_foodscrape"
            android:layout_weight="0.25"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@mipmap/foodscrapebtn"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"/>

        <ImageButton
            android:id="@+id/btn_landfill"
            android:layout_weight="0.25"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@mipmap/landfillbtn"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"/>

        <ImageButton
            android:id="@+id/btn_freecycle"
            android:layout_weight="0.25"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@mipmap/freecyclebtn"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#0000"
            android:padding="0dp"
            android:layout_below="@+id/linearLayout7"/>

    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/linearLayout7" />


</RelativeLayout>
